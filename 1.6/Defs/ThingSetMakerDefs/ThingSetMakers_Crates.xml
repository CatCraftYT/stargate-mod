<!-- Glyph Scrap Crate -->
  <ThingSetMakerDef>
    <defName>StargateMod_Reward_CrateGlyph</defName>
    <root Class="ThingSetMaker_RandomOption">
      <options>

        <!-- Glyph Slab -->
        <li>
          <weight>0.8</weight>
          <thingSetMaker Class="ThingSetMaker_Count">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>StargateMod_GlyphScrap</li>
                </thingDefs>
              </filter>
              <countRange>1~3</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <!-- Bad Outcome -->
        <li>
          <weight>0.3</weight>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
