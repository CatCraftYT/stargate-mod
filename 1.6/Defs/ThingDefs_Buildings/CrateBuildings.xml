<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Abstract="True" ParentName="CrateBase" Name="StargateMod_CrateBase">
    <stealable>false</stealable>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
    </statBases>
    <hasInteractionCell>false</hasInteractionCell>
    <building>
      <openingEffect>HermeticCrateOpened</openingEffect>
      <claimable>false</claimable>
    </building>
    <tickerType>Normal</tickerType>
  </ThingDef>
  
  <!-- Stargate site loot crates -->

<!-- Glyph Loot Crate -->
  <ThingDef ParentName="StargateMod_CrateBase">
    <defName>StargateMod_CrateGlyph</defName>
    <label>ornate container</label>
    <description>A small ornate container. Looks like it was designed specifically to contain something special.</description>
    <size>(1, 1)</size>
    <fillPercent>0.40</fillPercent>
    <graphicData>
      <texPath>Things/Building/Stargate/Crates/CrateGlyph</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1, 1)</drawSize>
    </graphicData>
    <comps>
      <li Class="CompProperties_EmptyStateGraphic">
        <graphicData>
          <texPath>Things/Building/Stargate/Crates/CrateGlyphOpen</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>(1, 1)</drawSize>
        </graphicData>
      </li>
      <li Class="CompProperties_LootSpawn">
        <contents>StargateMod_Reward_CrateGlyph</contents>
      </li>
    </comps>
  </ThingDef>
  
